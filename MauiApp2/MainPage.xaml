<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp2.ViewModels"
             x:Class="MauiApp2.MainPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <FlexLayout Grid.Row="0" Wrap="Wrap" JustifyContent="Center" AlignItems="Center">
            <Image Source="logo_facens.png" Aspect="AspectFit" HeightRequest="96"/>
            <Button x:Name="Login" Text="LOGIN" SemanticProperties.Hint="next page" Clicked="OnNextPageClicked" HorizontalOptions="Fill" />
        </FlexLayout>

        <CarouselView Grid.Row="1" x:Name="ImageCarousel" ItemsSource="{Binding ImageSources}"
                      HorizontalOptions="Fill" VerticalOptions="Fill">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ImageSource}" 
                           Aspect="AspectFill" 
                           HorizontalOptions="Fill" 
                           VerticalOptions="Fill"/>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Grid>

</ContentPage>
